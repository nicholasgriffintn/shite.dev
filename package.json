{
	"name": "app-name",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "NEXT_TELEMETRY_DISABLED=1 next dev",
		"build": "next build",
		"start": "NEXT_TELEMETRY_DISABLED=1 next start -p ${PORT-3000}",
		"lint": "next lint",
		"typecheck": "tsc --noEmit",
		"test": "echo \"No tests yet! You should add some...\"",
		"prisma-client": "prisma generate",
		"migrate-dev": "prisma migrate dev",
		"migrate-deploy": "prisma migrate deploy",
		"gql-gen": "graphql-codegen -r dotenv/config --config graphql-codegen.yml",
		"prepare": "husky install",
		"format": "prettier --loglevel warn --write \"**/*.{ts,js,json,jsx,tsx,md,scss}\"",
		"format:check": "prettier --check \"**/*.{ts,js,json,jsx,tsx,md,scss}\"",
		"docker:up": "docker-compose -f ./infrastructure/docker-compose.yml up -d",
		"docker:down": "docker-compose -f ./infrastructure/docker/docker-compose.yml down",
		"docker:build": "docker-compose -f ./infrastructure/docker/docker-compose.yml build",
		"docker:clean": "docker container rm -f $(docker container ls -qa) && docker image rm -f $(docker image ls -q)",
		"spec": "speculate --release $VERSION"
	},
	"files": [
		".next",
		"public",
		"infrastructure",
		"app-name.service"
	],
	"spec": {
		"rebuild": false,
		"prune": false,
		"requires": [
			"nodejs"
		],
		"buildRequires": [
			"nodejs",
			"yarn"
		],
		"executable": [],
		"post": [],
		"environment": {
			"NODE_ENV": "production",
			"TZ": "Europe/London"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --cache --fix"
		],
		"*.{ts,tsx,md,json,css}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@next-auth/prisma-adapter": "1.0.1",
		"@prisma/client": "3.10.0",
		"apollo-server-core": "3.6.4",
		"apollo-server-micro": "3.6.4",
		"class-validator": "0.13.2",
		"cors": "2.8.5",
		"dotenv": "^16.0.0",
		"graphql": "15.8.0",
		"ioredis": "^4.28.5",
		"micro": "9.3.4",
		"next": "12.1.0",
		"next-auth": "4.2.1",
		"next-connect": "0.12.2",
		"next-seo": "^5.1.0",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"reflect-metadata": "0.1.13",
		"type-graphql": "1.1.1",
		"urql": "2.2.0",
		"xmlbuilder": "^15.1.1"
	},
	"devDependencies": {
		"@egoist/prettier-config": "1.0.0",
		"@graphql-codegen/cli": "2.6.2",
		"@graphql-codegen/introspection": "2.1.1",
		"@graphql-codegen/typescript": "2.4.7",
		"@graphql-codegen/typescript-operations": "2.3.4",
		"@graphql-codegen/typescript-urql": "3.5.5",
		"@types/cors": "2.8.12",
		"@types/ioredis": "^4.28.8",
		"@types/jsonwebtoken": "8.5.8",
		"@types/node": "17.0.21",
		"@types/react": "17.0.40",
		"@types/react-dom": "17.0.13",
		"autoprefixer": "10.4.2",
		"eslint": "8.11.0",
		"eslint-config-next": "12.1.0",
		"husky": "7.0.4",
		"lint-staged": "12.3.5",
		"postcss": "8.4.8",
		"preact": "10.6.6",
		"prettier": "2.5.1",
		"prisma": "3.10.0",
		"speculate": "^3.0.0",
		"tailwindcss": "3.0.23",
		"ts-loader": "9.2.8",
		"typescript": "4.6.2"
	},
	"engines": {
		"node": ">=14"
	},
	"browserslist": [
		"defaults",
		"not IE 11",
		"maintained node versions"
	]
}
